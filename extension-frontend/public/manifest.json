{
  "manifest_version": 3,
  "name": "EcoShop - Sustainable Shopping Assistant",
  "version": "1.0.0",
  "description": "Make eco-friendly shopping decisions with real-time sustainability ratings and greener alternatives",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "alarms",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.in/*",
    "https://*.flipkart.com/*",
    "http://localhost:5001/*",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "file:///*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.in/*",
        "https://*.flipkart.com/*",
        "file:///*demo-products.html*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": ["content-enhanced.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
